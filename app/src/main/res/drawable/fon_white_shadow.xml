<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item

        android:top="4dp"
        android:left="4dp">
        <shape>
            <gradient
                android:angle="90.0"
                android:endColor="@color/grey0"
                android:startColor="@color/grey0" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item
        android:right="4dp"
        android:bottom="4dp">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item  android:top="1dp"
        android:left="1dp">
      <shape>
          <corners android:radius="5dp" />
        <gradient
            android:type="radial"
            android:gradientRadius="95%"
            android:startColor="@color/white"
            android:centerX="0.1"
            android:centerY="0.1"
            android:endColor="@android:color/transparent" />
    </shape></item>
</layer-list>